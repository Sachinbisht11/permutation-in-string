class Solution {
    public ListNode rotateRight(ListNode head, int k) {
        if (head == null || head.next == null || k == 0) return head;

        // Step 1: Find length of list
        ListNode curr = head;
        int length = 1;
        while (curr.next != null) {
            curr = curr.next;
            length++;
        }

        // Step 2: Connect tail to head (make it circular)
        curr.next = head;

        // Step 3: Find new head position
        k = k % length; // If k > length, take remainder
        int stepsToNewHead = length - k;

        // Step 4: Move to new tail
        ListNode newTail = curr; // currently at old tail
        while (stepsToNewHead-- > 0) {
            newTail = newTail.next;
        }

        // Step 5: Break the circle
        ListNode newHead = newTail.next;
        newTail.next = null;

        return newHead;
    }
}
